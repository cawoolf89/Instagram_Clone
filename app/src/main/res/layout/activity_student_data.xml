<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/retrieveDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataInputLayout">

        <TextView
            android:id="@+id/retrieveDataTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Find Student Data"
            android:textColor="#FAFAFA">

        </TextView>

        <EditText
            android:id="@+id/retrieveName_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Student Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/retrieveGPA_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Retrieved GPA"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/retrieveYear_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Retrieved Year"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/retrieveMajor_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Retrieved Major"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/retrieveParseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Retrieve Student Info" />
    </LinearLayout>

    <include
        android:id="@+id/main_activity_toolbar"
        layout="@layout/toolbar_layout"></include>

    <LinearLayout
        android:id="@+id/dataInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_toolbar">

        <TextView
            android:id="@+id/inputUserDataTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Input Student Data"
            android:textColor="#FAFAFA">

        </TextView>

        <EditText
            android:id="@+id/nameInput_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Student Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/gpaInput_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter GPA"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/yearInput_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Year (Senior, Freshman, ect.)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/majorInput_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Major"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/parseObjectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit User Info" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




